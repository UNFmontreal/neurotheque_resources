{
  "bids_root": "../data/mario_eeg/mario_eeg/bids",
  "dataset_name": "Mario EEG Trigger BIDS",
  "dataset_authors": [
    "Neurotheque Team"
  ],
  "overwrite_dataset_description": true,
  "recordings": [
    {
      "root": "../data/mario_eeg/mario_eeg/sourcedata/eeg",
      "subjects": ["01"],
      "sessions": ["001"],
      "runs": ["01"],
      "task": "mario",
      "line_freq": 60,
      "overwrite": true,
      "apply_montage": false,
      "trigger_rules": {
        "drop_zero": false,
        "binary_edges": true,
        "edge_direction": "both",
        "binary_threshold": 0.5,
        "value_map": {"0": 1, "1": 2},
        "trial_type_map": {
          "1": "frame_off",
          "2": "frame_on"
        },
        "stim_channel": "Trigger"
      },
      "behavior_events": {
        "enabled": true,
        "path": "../data/mario_eeg/mario_eeg/sub-01/ses-001/eeg/sub-01_ses-001_task-mario_run-01_events.tsv",
        "anchor_trial_types": ["fixation_dot", "gym-retro_game"],
        "sync_method": "next_frame_on",
        "alignment_strategy": "piecewise",
        "write_sidecar": true,
        "output_beh": true
      }
    }
  ]
}
